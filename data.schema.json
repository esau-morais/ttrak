{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "$schema": {
      "default": "./data.schema.json",
      "type": "string"
    },
    "version": {
      "default": 1,
      "type": "number"
    },
    "tasks": {
      "default": [],
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^(LOCAL|[A-Z]+)-\\d+$"
          },
          "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 200
          },
          "description": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "todo",
              "inProgress",
              "done",
              "cancelled"
            ]
          },
          "priority": {
            "type": "string",
            "enum": [
              "none",
              "low",
              "medium",
              "high",
              "urgent"
            ]
          },
          "createdAt": {
            "type": "string"
          },
          "updatedAt": {
            "type": "string"
          },
          "source": {
            "default": "local",
            "type": "string",
            "enum": [
              "local",
              "github",
              "linear"
            ]
          },
          "externalId": {
            "type": "string"
          },
          "linear": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "url": {
                "type": "string"
              },
              "teamId": {
                "type": "string"
              },
              "externalStatus": {
                "type": "string"
              },
              "syncedAt": {
                "type": "string"
              }
            },
            "required": [
              "id",
              "url",
              "syncedAt"
            ],
            "additionalProperties": false
          },
          "github": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "issue",
                  "pr"
                ]
              },
              "number": {
                "type": "number"
              },
              "repo": {
                "type": "string"
              },
              "url": {
                "type": "string"
              },
              "externalStatus": {
                "type": "string"
              },
              "syncedAt": {
                "type": "string"
              }
            },
            "required": [
              "type",
              "number",
              "repo",
              "url",
              "syncedAt"
            ],
            "additionalProperties": false
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "dueDate": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "title",
          "status",
          "priority",
          "createdAt",
          "updatedAt",
          "source"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "$schema",
    "version",
    "tasks"
  ],
  "additionalProperties": false
}