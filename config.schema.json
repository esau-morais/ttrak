{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "$schema": {
      "default": "./config.schema.json",
      "type": "string"
    },
    "version": {
      "default": 1,
      "type": "number"
    },
    "integrations": {
      "type": "object",
      "properties": {
        "github": {
          "type": "object",
          "properties": {
            "token": {
              "type": "string"
            },
            "repo": {
              "type": "string"
            },
            "syncInterval": {
              "default": 30,
              "type": "number"
            }
          },
          "required": [
            "token",
            "repo",
            "syncInterval"
          ],
          "additionalProperties": false
        },
        "linear": {
          "type": "object",
          "properties": {
            "apiKey": {
              "type": "string"
            },
            "teamId": {
              "type": "string"
            },
            "syncInterval": {
              "default": 30,
              "type": "number"
            },
            "syncOnlyAssigned": {
              "default": true,
              "type": "boolean"
            }
          },
          "required": [
            "apiKey",
            "syncInterval",
            "syncOnlyAssigned"
          ],
          "additionalProperties": false
        },
        "sync": {
          "type": "object",
          "properties": {
            "enabled": {
              "default": false,
              "type": "boolean"
            },
            "lastSync": {
              "type": "object",
              "propertyNames": {
                "type": "string"
              },
              "additionalProperties": {
                "type": "string"
              }
            }
          },
          "required": [
            "enabled"
          ],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "linear": {
      "type": "object",
      "properties": {
        "apiKey": {
          "type": "string"
        },
        "teamId": {
          "type": "string"
        }
      },
      "required": [
        "apiKey"
      ],
      "additionalProperties": false
    },
    "github": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string"
        },
        "repo": {
          "type": "string"
        }
      },
      "required": [
        "token"
      ],
      "additionalProperties": false
    },
    "theme": {
      "default": {
        "mode": "auto",
        "flavor": "mocha"
      },
      "type": "object",
      "properties": {
        "mode": {
          "default": "auto",
          "type": "string",
          "enum": [
            "auto",
            "catppuccin",
            "system"
          ]
        },
        "flavor": {
          "default": "mocha",
          "type": "string",
          "enum": [
            "latte",
            "frappe",
            "macchiato",
            "mocha"
          ]
        },
        "overrides": {
          "type": "object",
          "propertyNames": {
            "type": "string"
          },
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "required": [
        "mode",
        "flavor"
      ],
      "additionalProperties": false
    },
    "defaultView": {
      "default": "all",
      "type": "string",
      "enum": [
        "all",
        "todo",
        "inProgress",
        "done"
      ]
    }
  },
  "required": [
    "$schema",
    "version",
    "theme",
    "defaultView"
  ],
  "additionalProperties": false
}